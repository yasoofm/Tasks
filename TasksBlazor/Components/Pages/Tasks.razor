@page "/Tasks"
@inject NavigationManager Navigation

<TelerikGrid Data="Tickets">
    <GridColumns>
        <GridColumn>
            <HeaderTemplate>
                To-Do
            </HeaderTemplate>
            <Template>

            </Template>
        </GridColumn>
    </GridColumns>
</TelerikGrid>

@code {
    [CascadingParameter] GlobalAppState? State { get; set; }
    private IEnumerable<GetTaskResponse>? Tickets { get; set; }

    protected async override Task OnInitializedAsync()
    {
        try
        {
            if (State == null)
            {
                throw new NullReferenceException("GlobalAppState is null in Tasks page");
            }

            var client = State!.CreateClient();
            var response = await client.GetAsync("Tasks");
            if (response.IsSuccessStatusCode)
            {
                Tickets = await response.Content.ReadFromJsonAsync<IEnumerable<GetTaskResponse>>();
            }
        }
        catch (HttpRequestException ex)
        {
            Console.WriteLine(ex);
        }
        catch (NullReferenceException ex)
        {
            Console.WriteLine(ex);
        }


    }
}
